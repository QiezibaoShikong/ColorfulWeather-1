<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/base_dimen_size_dp_16"
    android:orientation="vertical">

    <!--紫外线指数-->
    <android.support.v7.widget.CardView
        style="@style/LifeIndexCardStyle"
        app:cardCornerRadius="@dimen/base_dimen_radius_dp_2"
        app:cardElevation="@dimen/base_dimen_size_dp_2">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/base_dimen_size_dp_32"
                    android:layout_height="@dimen/base_dimen_size_dp_32"
                    android:src="@drawable/ic_index_ultraviolet_ray_icon" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardTextStyle"
                    android:text="@string/sweet_sec_title_txt_uv_index" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardInfoTextStyle"
                    android:text="弱" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardSuggestTextStyle"
                    android:text="紫外线强度较弱，建议出门前涂擦SPF在12-15之间、PA+的防晒护肤品。" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

    <!--旅游指数-->
    <android.support.v7.widget.CardView
        style="@style/LifeIndexCardStyle"
        app:cardCornerRadius="@dimen/base_dimen_radius_dp_2"
        app:cardElevation="@dimen/base_dimen_size_dp_2">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/base_dimen_size_dp_32"
                    android:layout_height="@dimen/base_dimen_size_dp_32"
                    android:src="@drawable/ic_index_travel_icon" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardTextStyle"
                    android:text="@string/sweet_sec_title_txt_trav_index" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardInfoTextStyle"
                    android:text="适宜" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardSuggestTextStyle"
                    android:text="天气较好，但丝毫不会影响您出行的心情。温度适宜又有微风相伴，适宜旅游。" />
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>

    <!--运动指数-->
    <android.support.v7.widget.CardView
        style="@style/LifeIndexCardStyle"
        app:cardCornerRadius="@dimen/base_dimen_radius_dp_2"
        app:cardElevation="@dimen/base_dimen_size_dp_2">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/base_dimen_size_dp_32"
                    android:layout_height="@dimen/base_dimen_size_dp_32"
                    android:src="@drawable/ic_index_sport_icon" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardTextStyle"
                    android:text="@string/sweet_sec_title_txt_sport_index" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardInfoTextStyle"
                    android:text="适宜" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardSuggestTextStyle"
                    android:text="天气较好，赶快投身大自然参与户外运动，尽情感受运动的快乐吧。" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

    <!--感冒指数-->
    <android.support.v7.widget.CardView
        style="@style/LifeIndexCardStyle"
        app:cardCornerRadius="@dimen/base_dimen_radius_dp_2"
        app:cardElevation="@dimen/base_dimen_size_dp_2">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/base_dimen_size_dp_32"
                    android:layout_height="@dimen/base_dimen_size_dp_32"
                    android:src="@drawable/ic_index_cold_icon" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardTextStyle"
                    android:text="@string/sweet_sec_title_txt_flu_index" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardInfoTextStyle"
                    android:text="少发" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardSuggestTextStyle"
                    android:text="各项气象条件适宜，无明显降温过程，发生感冒机率较低。" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

    <!--洗车指数-->
    <android.support.v7.widget.CardView
        style="@style/LifeIndexCardStyle"
        android:layout_marginBottom="@dimen/base_dimen_size_dp_4"
        app:cardCornerRadius="@dimen/base_dimen_radius_dp_2"
        app:cardElevation="@dimen/base_dimen_size_dp_2">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/base_dimen_size_dp_32"
                    android:layout_height="@dimen/base_dimen_size_dp_32"
                    android:src="@drawable/ic_index_car_wash_icon" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardTextStyle"
                    android:text="@string/sweet_sec_title_txt_cw_index" />
            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardInfoTextStyle"
                    android:text="较不宜" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/LifeIndexCardSuggestTextStyle"
                    android:text="较不宜洗车，未来一天无雨，风力较大，如果执意擦洗汽车，要做好蒙上污垢的心理准备。" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sweet_card_more_index_height"
    android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
    android:layout_marginTop="@dimen/base_dimen_size_dp_8"
    android:layout_marginRight="@dimen/base_dimen_size_dp_16"
    app:cardCornerRadius="@dimen/base_dimen_radius_dp_8"
    app:cardElevation="@dimen/base_dimen_size_dp_8">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_today_index_title"
            style="@style/CardTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sweet_title_txt_life_index" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/base_dimen_size_dp_2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatTextView
                    style="@style/TodayIndexTitleStyle"
                    android:text="湿度" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="@dimen/base_dimen_size_dp_8"
                    android:src="@drawable/ic_today_index_humidity" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TodayIndexContentStyle"
                    android:text="66%" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorDivider" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/base_dimen_size_dp_2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatTextView
                    style="@style/TodayIndexTitleStyle"
                    android:text="风" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="@dimen/base_dimen_size_dp_8"
                    android:src="@drawable/ic_today_index_windy" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TodayIndexContentStyle"
                    android:text="西风" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorDivider" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/base_dimen_size_dp_2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatTextView
                    style="@style/TodayIndexTitleStyle"
                    android:text="能见度" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="@dimen/base_dimen_size_dp_8"
                    android:src="@drawable/ic_today_index_visable" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TodayIndexContentStyle"
                    android:text="2km" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorDivider" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/base_dimen_size_dp_2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <android.support.v7.widget.AppCompatTextView
                    style="@style/TodayIndexTitleStyle"
                    android:text="太阳" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="@dimen/base_dimen_size_dp_8"
                    android:src="@drawable/ic_today_index_sun" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/TodayIndexContentStyle"
                    android:text="05：50" />
            </android.support.v7.widget.LinearLayoutCompat>


        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>
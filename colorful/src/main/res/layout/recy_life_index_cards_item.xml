<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/LifeIndexCardStyle"
    app:cardCornerRadius="@dimen/base_dimen_radius_dp_8"
    app:cardElevation="@dimen/base_dimen_size_dp_4">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_recy_color_accent_masked"
        android:clickable="true"
        android:padding="@dimen/base_dimen_size_dp_8"
        android:focusable="true">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/base_dimen_size_dp_8"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imgv_life_index_icon"
                android:layout_width="@dimen/base_dimen_size_dp_32"
                android:layout_height="@dimen/base_dimen_size_dp_32" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_life_index_type"
                style="@style/LifeIndexCardTextStyle" />
        </android.support.v7.widget.LinearLayoutCompat>


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_dimen_size_dp_16"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_life_index_value"
                style="@style/LifeIndexCardInfoTextStyle" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_life_index_content"
                style="@style/LifeIndexCardSuggestTextStyle" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.CardView>